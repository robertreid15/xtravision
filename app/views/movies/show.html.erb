<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director %>
</p>

<p>
  <strong>Category:</strong>
  <%= @movie.category_id %>
</p>

<p>
  <strong>Poster:</strong>
  <%= image_tag(@movie.poster, :size=> "150x100") %>
</p>

<p>
  <strong>Trailer:</strong>
  <%= sanitize(@movie.trailer,:tags=>['iframe'])%>
</p>

<p>
  <strong>Available:</strong>
  <%= @movie.available %>
</p>

