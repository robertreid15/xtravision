<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>Address</th>
      <th>Accountbalance</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.userName %></td>
        <td><%= user.password %></td>
        <td><%= user.address %></td>
        <td><%= user.accountBalance %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<div id= "columns">
<ul>
	<li><%= link_to"movies",'http://localhost:3000/movies'%></li>
	<li><%= link_to"rentals",'http://localhost:3000/rentals'%></li>
	<li><%= link_to"categories",'http://localhost:3000/categories'%></li>
</ul>
</div>	
<%=yield%>
